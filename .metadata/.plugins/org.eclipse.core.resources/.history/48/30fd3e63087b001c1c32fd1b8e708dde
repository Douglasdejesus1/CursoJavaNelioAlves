package application;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Quantos qual o tamanho de sua matriz?");
		int N = sc.nextInt();
		
		int mat[][]=new int[N][N];
		
		for (int i=0;i<N;i++) {
			for (int j=0;j<N;j++) {
				mat[i][j]=sc.nextInt();
			}
		}
		
		System.out.println("Main diagonal: ");
		for (int i=0;i<N;i++) {
			System.out.print(mat[i][i]+" ");	
		}
		
		
		
		
		
		int soma=0;
		System.out.println();
		for (int i=0;i<N;i++) {
			for (int j=0;j<N;j++) {
				if (mat[i][j]<0) {
					soma+=i;
				}
			}
		}
		System.out.println("Negative numbers= "+soma);
	
		
		
		
		sc.close();
	}

}
