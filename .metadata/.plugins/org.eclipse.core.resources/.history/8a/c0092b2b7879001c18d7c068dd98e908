package application;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import entities.Funcionarios;

public class Program {

	public static void main(String[] args) {
			Locale.setDefault(Locale.US);
			Scanner sc=new Scanner(System.in);
			
			System.out.println("Quantos funcionarios há na empresa?");
			int N=sc.nextInt();
			List<Funcionarios>list=new ArrayList<>();
			for (int i=0;i<N;i++) {
				System.out.println("Funcionario ("+(i+1)+"):");
				System.out.print("Qual é o ID: ");
				Integer id=sc.nextInt();
				System.out.print("Qual é o Nome: ");
				sc.nextLine();
				String nome=sc.nextLine();
				System.out.print("Qual é a Carga Horaria: ");
				Integer ch=sc.nextInt();
				System.out.print("Qual é o Valor da Hora: ");
				Double valorhora=sc.nextDouble();
				Funcionarios emp = new Funcionarios(id,nome,ch,valorhora);
				list.add(emp);
			}
			System.out.println();
			System.out.println("Empregados:");
			for(Funcionaros e : list) {
				System.out.println(e);
				
			}
			
			sc.close();
	}

}
